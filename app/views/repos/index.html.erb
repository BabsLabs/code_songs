<h1>search for a repo</h1>
<%= form_tag(repos_search_path) do %>
  find a repo <%= text_field_tag :search %>
  <%= submit_tag 'search' %>
<% end %>

<% if @repos_found %>
  <section class="found-repos">
    <% @repos_found.each do |repo| %>
      <ul>
        <li><%= repo[:repo_name] %></li>
      </ul>
    <% end %>
  </section>
<% end %>
