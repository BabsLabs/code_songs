<center class="search-section">
  <h1>search for a repo</h1>
  <%= form_tag(repos_search_path, method: :get, class: 'srch-form') do %>
    <%= text_field_tag :search, nil, placeholder: "Enter a repo" %>
    <%= submit_tag 'search', class: 'srch-btn'%>
  <% end %>
<center>

<center>
  <% if repos_found && !repos_found.repos.empty? %>
  <h2>Select a Codebase to Songify</h2>
    <section class="found-repos">
      <% repos_found.repos.each_with_index do |repo, i| %>
        <ul>
          <li id='repo-<%= i + 1 %>'>
            <p><%= repo.name %></p> <%= button_to 'Select this Code', choose_repo_path(repo_name: repo.name), method: :patch, class: 'select-btn' %>
            <hr>
          </li>
        </ul>
      <% end %>
    </section>
  <% elsif repos_found && repos_found.repos.empty? %>
    <%= repos_found.bad_search %>
  <% end %>
</center>
